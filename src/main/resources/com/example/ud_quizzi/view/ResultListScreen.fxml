<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ud_quizzi.view.ResultListController"
            prefWidth="850" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #e9f2ff, #d3e3ff);">

    <VBox spacing="25" alignment="TOP_CENTER"
          AnchorPane.topAnchor="20" AnchorPane.leftAnchor="25"
          AnchorPane.rightAnchor="25" AnchorPane.bottomAnchor="25">

        <!-- Tiêu đề -->
        <Label text="DANH SÁCH KẾT QUẢ THI"
               style="-fx-font-size: 30px; -fx-font-weight: bold;
                      -fx-text-fill: #0d47a1; -fx-padding: 10 0 20 0;"/>

        <!-- Khung bảng -->
        <TableView fx:id="tableResultList"
                   prefHeight="440"
                   style="
                        -fx-background-color: white;
                        -fx-background-radius: 12;
                        -fx-border-radius: 12;
                        -fx-border-color: #64b5f6;
                        -fx-border-width: 1.3;
                        -fx-padding: 5;
                   ">
            <columns>
                <TableColumn fx:id="colUserName" text="Tên thí sinh" prefWidth="200"/>
                <TableColumn fx:id="colExamName" text="Tên đề thi" prefWidth="260"/>
                <TableColumn fx:id="colScore" text="Điểm số" prefWidth="150"/>
                <TableColumn fx:id="colDate" text="Ngày nộp" prefWidth="180"/>
            </columns>
        </TableView>

        <!-- Buttons -->
        <HBox spacing="20" alignment="CENTER">

            <Button text="⬅ Trở lại"
                    onAction="#handleBack"
                    prefWidth="150" prefHeight="44"
                    style="
                        -fx-background-color: #1565c0;
                        -fx-text-fill: white;
                        -fx-font-weight: bold;
                        -fx-background-radius: 12;
                        -fx-font-size: 15px;
                    "/>

            <Button text="Sắp xếp tăng dần"
                    onAction="#handleSortA"
                    prefWidth="150" prefHeight="44"
                    style="
                        -fx-background-color: #43a047;
                        -fx-text-fill: white;
                        -fx-font-weight: bold;
                        -fx-background-radius: 12;
                        -fx-font-size: 15px;
                    "/>

            <Button text="Sắp xếp giảm dần"
                    onAction="#handleSortD"
                    prefWidth="150" prefHeight="44"
                    style="
                        -fx-background-color: #e53935;
                        -fx-text-fill: white;
                        -fx-font-weight: bold;
                        -fx-background-radius: 12;
                        -fx-font-size: 15px;
                    "/>

        </HBox>

    </VBox>
</AnchorPane>
