<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<HBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ud_quizzi.view.LoginController"
      prefWidth="800" prefHeight="400">

    <!-- Left side: Image + glassmorphism form -->
    <StackPane prefWidth="400">
        <ImageView fx:id="backgroundImage" fitWidth="280" fitHeight="280" preserveRatio="true" StackPane.alignment="CENTER"/>

        <VBox spacing="40" alignment="CENTER"
              style="-fx-background-color: rgba(255,255,255,0.25);
                     -fx-background-radius: 25;
                     -fx-padding: 20;
                     -fx-border-color: rgba(255,255,255,0.4);
                     -fx-border-width: 1.5px;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20,0,0,5);">

            <Label text="ĐĂNG NHẬP"
                   style="-fx-font-size: 32px;
                          -fx-font-weight: bold;
                          -fx-text-fill: black;
                          -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.7), 5,0,0,2);"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: black;"/>
                <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="180"
                           style="-fx-background-color: rgba(255,255,255,0.6);
                                  -fx-background-radius: 12;
                                  -fx-border-color: rgba(0,0,0,0.25);"/>

                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                       style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: black;"/>
                <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="180"
                               style="-fx-background-color: rgba(255,255,255,0.6);
                                      -fx-background-radius: 12;
                                      -fx-border-color: rgba(0,0,0,0.25);"/>
            </GridPane>

            <!-- Login Button -->
            <Button text="Đăng nhập" onAction="#handleLogin" prefWidth="150" prefHeight="36"
                    style="-fx-background-color: linear-gradient(to right, #ff758c, #ff7eb3);
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-font-size: 14px;
                           -fx-background-radius: 12;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5,0,0,2);"/>

            <!-- Register Button (ĐÃ LÀM ĐẸP) -->
            <Button text="Đăng kí" onAction="#handleRegister" prefWidth="150" prefHeight="36"
                    style="-fx-background-color: linear-gradient(to right, #6a82fb, #fc5c7d);
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-font-size: 14px;
                           -fx-background-radius: 12;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5,0,0,2);"/>

            <Label fx:id="messageLabel" style="-fx-text-fill: #b71c1c; -fx-font-size: 12px;"/>
        </VBox>
    </StackPane>

    <!-- Right side gradient -->
    <VBox prefWidth="400" alignment="CENTER"
          style="-fx-background-color: linear-gradient(to bottom right, #ffe29f, #ffa99f);">
        <ImageView fx:id="sideImage" fitWidth="280" fitHeight="280" preserveRatio="true"/>
    </VBox>

</HBox>
